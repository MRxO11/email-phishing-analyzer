{
  "manifest_version": 3,
  "name": "AI Phishing Analyzer",
  "version": "1.2",
  "description": "Detect phishing emails using local LLaMA2 via Ollama",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*", "https://outlook.live.com/*"],
      "js": ["content.js"]
    }
  ]
}
